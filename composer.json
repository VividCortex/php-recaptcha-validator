{
    "name": "vividcortex/recaptcha-validator",
    "description": "A reCaptcha validator",
    "require": {
        "php": ">=5.4",
        "guzzlehttp/guzzle": "~5.2"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ismael Ambrosi",
            "email": "ismael@vividcortex.com"
        }
    ],
    "minimum-stability": "stable",
    "suggest": {
        "google/recaptcha": "This package has been deprecated in favor of Google's own recaptcha validator."
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "VividCortex\\": "src/" }
    }
}
